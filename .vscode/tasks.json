{

    "version": "2.0.0",
    "tasks": [
        {
            "label": "SnowStudio: register Teradata license",
            "type": "shell",
            "command": "/opt/snowct -l ${input:license}",
            "presentation": {
                "echo": true,
                "reveal": "always",  
                "panel": "new"
            },
            "problemMatcher":"$eslint-compact"
        },
        {
            "label": "SnowStudio: register Oracle license",
            "type": "shell",
            "command": "/opt/snowct-oracle -l ${input:license}",
            "presentation": {
                "echo": true,
                "reveal": "always",  
                "panel": "new"
            },
            "problemMatcher":"$eslint-compact"
        }, 
        {
            "label": "SnowStudio: collect coverage",
            "type": "shell",
            "command": "/opt/snowstudio/scripts/collectcoverage.sh",
            "presentation": {
                "echo": true,
                "reveal": "always", 
                "panel": "new"
            },
            "problemMatcher":"$eslint-compact"
        },        
        {
            "label": "SnowStudio: Deploy All Target",
            "type": "shell",
            "command": "/opt/snowstudio/scripts/deployAllCustomDir.sh \"${input:deploydir}\" ${input:split} \"${input:splitpattern}\"",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher":"$eslint-compact"
        },
        {
            "label": "SnowStudio: Deploy All TargetMigrated",
            "type": "shell",
            "command": "/opt/snowstudio/scripts/deployAllCustomDir.sh \"${input:deploydirTargetMigrated}\" ${input:split} \"${input:splitpattern}\"",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher":"$eslint-compact"
        }        
    ],
    "inputs": [
            {
                "id": "deploydir",
                "description":"Folder where the files to deploy are located?",
                "type": "promptString",
                "default": "./Target"
            },
            {
                "id": "deploydirTargetMigrated",
                "description":"Folder where the files to deploy are located?",
                "type": "promptString",
                "default": "./TargetMigratedCode/Output"
            },  
            {
                "id": "split",
                "description":"If a file has several scripts try to split them?",
                "type": "promptString",
                "default": "False"
            },
            {
                "id": "splitpattern",
                "description":"If a file needs to be splitted this regex pattern will be used to split the statements",
                "type": "promptString",
                "default": "(CREATE OR REPLACE)"
            },                    
            {
                "id": "inputdir",
                "description":"Folder where the input files are located?",
                "type": "promptString"
            },
            {
                "id": "outputdir",
                "description":"Folder where the output files will be put?",
                "type": "promptString"
            },
            {
                "id": "account",
                "description":"Which snowflake account will be used for deployment?",
                "type": "promptString"
            },
            {
                "id": "license",
                "description":"Please provide your snowflake license",
                "default": "",
                "type": "promptString"
            }
        ]
  }